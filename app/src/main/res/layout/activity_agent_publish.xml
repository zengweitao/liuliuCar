<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    style="@style/layout_style_mmv"
    android:background="@color/white_gray">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvTopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLength="15"
            android:singleLine="true"
            android:text="p2p"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <com.cheweibao.liuliu.ui.ClickEffectImageView
            android:id="@+id/ivTopBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:paddingBottom="8dip"
            android:paddingLeft="8dip"
            android:paddingRight="6dip"
            android:paddingTop="8dip"
            android:scaleType="centerInside"
            android:src="@drawable/title_bar_back_white_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTopRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="12dip"
            android:text="搜索"
            android:textColor="@drawable/top_right_selectable"
            android:textSize="16dip"
            android:visibility="gone" />

        <com.cheweibao.liuliu.ui.ClickEffectImageView
            android:id="@+id/ivTopRight"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="12dip"
            android:paddingLeft="10dip"
            android:paddingRight="15dip"
            android:paddingTop="12dip"
            android:scaleType="centerInside"
            android:src="@drawable/default_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <com.cheweibao.liuliu.ui.ScrollViewExt
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title_layout"
        android:layout_weight="1">

        <LinearLayout style="@style/layout_style_mwv">

            <LinearLayout
                style="@style/layout_style_mwv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:id="@+id/ll_order_no"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_order_no"
                        style="@style/textview_style_black13"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="订单编号："
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_name"
                        style="@style/textview_style_black13"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusable="false"
                        android:hint="主贷人姓名"
                        android:maxLines="1"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_mileage"
                        style="@style/textview_style_black13"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusable="false"
                        android:hint="请输入里程数"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <TextView
                        style="@style/textview_style_gray13"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="(万公里)" />

                    <TextView
                        style="@style/textview_style_red20"
                        android:layout_gravity="center_vertical"
                        android:text="*" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_car_type"
                        style="@style/textview_style_black13"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="车辆型号" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/cjt_arrow_d" />

                    <TextView
                        style="@style/textview_style_red20"
                        android:layout_gravity="center_vertical"
                        android:text="*" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_style_mwh"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_textview_white_br"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/textview_style_black13"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:hint="上牌时间" />

                        <TextView
                            style="@style/textview_style_red20"
                            android:layout_gravity="center_vertical"
                            android:text="*" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_textview_white_br"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp">

                        <Spinner
                            android:id="@+id/sp_pl"
                            style="@style/textview_style_black13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="-5dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cjt_arrow_d" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_car_area"
                        style="@style/textview_style_black13"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="车牌归所地" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/cjt_arrow_d" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <Spinner
                        android:id="@+id/sp_car_status"
                        style="@style/textview_style_black13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/cjt_arrow_d" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_textview_white_br"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">

                    <Spinner
                        android:id="@+id/sp_bank"
                        style="@style/textview_style_black13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="-5dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/cjt_arrow_d" />
                </RelativeLayout>

                <GridLayout
                    android:id="@+id/gl_img"
                    style="@style/layout_style_mw"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:columnCount="2">

                </GridLayout>
            </LinearLayout>


        </LinearLayout>

    </com.cheweibao.liuliu.ui.ScrollViewExt>

    <LinearLayout
        style="@style/layout_style_mwv"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/ll_new"
            style="@style/layout_style_mwh">

            <Button
                android:id="@+id/btn_set_price"
                style="@style/textview_style_white15"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_3_br"
                android:text="预估价格" />

            <Button
                android:id="@+id/btn_report"
                style="@style/textview_style_white15"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_3_br"
                android:text="申请报告"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_modify"
            style="@style/layout_style_mwh">

            <Button
                android:id="@+id/btn_save"
                style="@style/textview_style_white15"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_3_br"
                android:text="保存" />

            <Button
                android:id="@+id/btn_rep_report"
                style="@style/textview_style_white15"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_3_br"
                android:text="申请报告" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
