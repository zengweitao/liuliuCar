<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <View style="@style/a_layout_style_wblank" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fb_icon_fbcg" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/textview_style_gray16"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="发布成功" />

        <TextView
            style="@style/textview_style_gray14"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="正在为您评估中，请您耐心等待" />

        <Button
            android:id="@+id/tv_set_price"
            style="@style/textview_style_white15"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_blue_3_br"
            android:text="返回" />

        <View style="@style/a_layout_style_wblank" />
    </LinearLayout>
</RelativeLayout> 