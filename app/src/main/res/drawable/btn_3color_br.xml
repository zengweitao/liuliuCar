<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <solid android:color="@color/gray_button" />
            <stroke android:width="0.5dp" android:color="@color/gray_button" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item> <!-- default -->
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:width="0.5dp" android:color="@color/transparent" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- disable -->
        <shape>
            <solid android:color="@color/gray_blue" />
            <stroke android:width="0dp" android:color="@color/gray_blue" />
            <corners android:radius="50dip" />
        </shape>
    </item>
</selector>